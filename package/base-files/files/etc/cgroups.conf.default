######################################
# Default cgroupsv2 resource slicing.
######################################
#
# CPU and Memory sliced as "low", "default" and "high"
#

resources="cpu memory"
resource_slices="low default high"

# Only one default value here. Pid 1 will be added in this slice.
default_slice="default"

# Specify more than one attributes.
cpu_attributes="shares"
memory_attributes="limit_in_bytes"

# Attribute values
# CPU Limits
low_cpu_shares=2
default_cpu_shares=80
high_cpu_shares=160

# Memory Limits
low_memory_limit_in_bytes=31457280
default_memory_limit_in_bytes=200000000
high_memory_limit_in_bytes=400000000
